<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    app:layout_constraintBottom_toBottomOf="parent"
app:flow_verticalAlign="bottom">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.cardview.widget.CardView
        android:id="@+id/sigin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:layout_margin="15dp"

        app:cardCornerRadius="14dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/sigin"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share With Friends"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/share_icon"
            android:drawablePadding="15dp"

           android:drawableEnd="@drawable/arrow"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate The App"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/review"
                android:drawablePadding="15dp"

                android:drawableEnd="@drawable/arrow"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/policy"
                android:drawablePadding="15dp"

                android:drawableEnd="@drawable/arrow"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/service"
                android:drawablePadding="15dp"

                android:drawableEnd="@drawable/arrow"
                />




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


