<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:visibility="invisible"
    android:id="@+id/feedback_xml"
    android:background="#B3000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="405dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        app:cardCornerRadius="10dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ImageView
            android:id="@+id/mail_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mailbox"
         android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/submit_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:padding="10sp"
            android:textSize="22sp"
            android:layout_below="@id/mail_box"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            />
            <EditText
                android:id="@+id/edit_text"
                android:layout_width="250dp"
                android:layout_height="100dp"

                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_below="@id/submit_feed"

                android:textSize="16sp"
                android:hint="Tell us where we can improve"
                android:background="@drawable/editbg"
                />

            <Button
                android:id="@+id/third_btn"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edit_text"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_marginBottom="6dp"
                android:background="@drawable/oval"
             android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maybe later"
                android:layout_below="@id/third_btn"

                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="4dp"
                />





        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>